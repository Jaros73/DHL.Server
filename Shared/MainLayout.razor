@rendermode InteractiveServer
@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims

@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<HeadContent>
    <link rel="stylesheet" href="css/app.css" />
    <link rel="stylesheet" href="font-awesome/css/fontawesome.css" />
    <link rel="stylesheet" href="font-awesome/css/solid.css" />
    <link rel="stylesheet" href="font-awesome/css/brands.css" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
</HeadContent>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<AuthorizeView>
    <Authorized>
        <div class="layout-container">
            <!-- Sidebar -->
            <nav class="sidebar">
                <div class="sidebar-logo">DHL</div>
                <hr class="sidebar-divider" />
                <NavMenu />
                <div class="user-menu-wrapper">
                    <UserMenu />
                </div>
            </nav>

            <!-- Main Content -->
            <div class="main-content">
                <main class="content">
                    @Body
                </main>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <RedirectToPortal />
    </NotAuthorized>
</AuthorizeView>

<style>
    .layout-container {
        display: flex;
        height: 100vh;
        position: relative;
        overflow: visible;
    }

    .sidebar {
        width: 80px;
        background-color: #f8f9fa;
        padding: 1rem 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: visible;
        z-index: 2;
    }

    .sidebar-logo {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .sidebar-divider {
        width: 80%;
        height: 1px;
        background-color: #ccc;
        margin-bottom: 1rem;
    }

    .main-content {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        height: 100vh;
        overflow: hidden;
    }

    .content {
        width: 100%;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        padding: 1rem;
        overflow: auto;
    }

    .user-menu-wrapper {
        margin-top: auto;
        padding-bottom: 1rem;
    }

    .nav-menu {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    .nav-item {
        position: relative;
        padding: 1rem;
        font-size: 1.8rem;
        color: #333;
        text-decoration: none;
    }

</style>
