@using DHL.Server.Features.Ciselniky.Models
@using DHL.Server.Features.Ciselniky.Interfaces
@inject IZastavkaService ZastavkaService
@inject IDialogService DialogService
@inject AuthenticationStateProvider AuthenticationStateProvider
@using MudBlazor

<MudPaper Class="p-4">
    <MudText Typo="Typo.h5" Class="mb-2">Zastávky</MudText>

    <div class="mb-2">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="CreateItem" StartIcon="@Icons.Material.Filled.Add">
            Nová zastávka
        </MudButton>
    </div>

    <MudTable Items="_items" Hover="true" Dense="true" Bordered="true">
        <HeaderContent>
            <MudTh>Název</MudTh>
            <MudTh>Stav</MudTh>
            <MudTh>Založeno</MudTh>
            <MudTh>Akce</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>
                <MudChip T="string"
                         Color="@(context.IsActive ? Color.Success : Color.Default)"
                         Variant="Variant.Filled"
                         Size="Size.Small">
                    @(context.IsActive ? "Aktivní" : "Neaktivní")
                </MudChip>
            </MudTd>
            <MudTd>@context.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" OnClick="() => EditItem(context)" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="() => DeleteItem(context.Id)" />
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudPaper>

@code {
    private List<ZastavkaDto> _items = new();

    protected override async Task OnInitializedAsync()
    {
        _items = await ZastavkaService.GetAllAsync();
    }

    private async Task CreateItem()
    {
        await OpenEditDialog(new ZastavkaDto());
    }

    private async Task EditItem(ZastavkaDto item)
    {
        await OpenEditDialog(item);
    }

    private async Task OpenEditDialog(ZastavkaDto original)
    {
        var parameters = new DialogParameters { ["Model"] = original };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<ZastavkaDialog>(original.Id == 0 ? "Nová zastávka" : "Úprava zastávky", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled && result.Data is ZastavkaDto updated)
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var userName = authState.User.Identity?.Name ?? "system";

            updated.CreatedBy = string.IsNullOrWhiteSpace(updated.CreatedBy) ? userName : updated.CreatedBy;

            ZastavkaDto ulozeny;
            if (updated.Id == 0)
            {
                ulozeny = await ZastavkaService.CreateAsync(updated);
                _items.Add(ulozeny);
            }
            else
            {
                ulozeny = await ZastavkaService.UpdateAsync(updated.Id, updated) ?? updated;
                var index = _items.FindIndex(x => x.Id == ulozeny.Id);
                if (index >= 0)
                    _items[index] = ulozeny;
            }

            _items = _items.OrderBy(x => x.Name).ToList();
            StateHasChanged();
        }
    }

    private async Task DeleteItem(int id)
    {
        var confirmed = await DialogService.ShowMessageBox("Potvrzení", "Opravdu chcete smazat záznam?", "Ano", "Ne");
        if (confirmed == true)
        {
            await ZastavkaService.DeleteAsync(id);
            _items = await ZastavkaService.GetAllAsync();
        }
    }
}
