@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims

@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<div class="user-menu">
    <div class="avatar">RR</div>
    <button class="logout-btn" @onclick="Logout">Odhlásit</button>
</div>

<style>
    .user-menu {
        text-align: center;
        margin-top: auto;
    }

    .avatar {
        width: 40px;
        height: 40px;
        background-color: #007bff;
        color: white;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .logout-btn {
        background: none;
        border: none;
        color: #007bff;
        cursor: pointer;
        font-size: 16px;
    }
</style>

@code {
    private void Logout()
    {
        Navigation.NavigateTo("https://portal.example.com/logout", forceLoad: true);
    }
}
